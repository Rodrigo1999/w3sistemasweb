<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, inital-scale=1, maximum-scale=1">
	<title>Admin</title>
	<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="/css/adminLogin.css">	
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
	<script src="https://npmcdn.com/js-alert/dist/jsalert.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script>
		var socket = io();
		$(document).ready(function(){
			$("form").submit(function(evt){
				evt.preventDefault();
				var data = {
					l: evt.target.login.value,
					s: evt.target.senha.value
				}

				socket.emit('logindb', data, function(data){
					if(data){
						window.location.href = window.location.protocol+"//"+window.location.hostname+window.location.pathname;
					}else{
						JSAlert.alert("Login incorreto");
					}
				});
				return false;
			})
		})
	</script>
</head>
<body>
	<div class="logo"></div>
	<div class="login-block">
		<form action="#" method="POST">
		    <h1>Login</h1>
		    <input type="text" name="login" placeholder="Username" id="login"/>
		    <input type="password" name="senha" placeholder="Password" id="senha"/>
		    <button>Entrar</button>
	    </form>
	</div>
</body>
</html>




